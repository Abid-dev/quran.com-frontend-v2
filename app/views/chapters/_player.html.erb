<div id="player" data-controller="player player-manager" class="fixed-bottom bg-white custom-shadow">
  <div class="container p-2">
    <div class="row offset-md-2">
      <div class="col-md-3 d-flex justify-content-between mt-3 order-md-0 order-1">
        <div class="previous-btn d-flex align-items-center order-md-0 order-2">
          <i class="text-muted fa fa-step-backward c-pointer"></i>
        </div>

        <div class="d-flex align-items-center order-md-1 order-3" style="font-size: 30px">
          <i class="text-primary fa-play-circle c-pointer play-btn"></i>
        </div>

        <div class="next-btn d-flex align-items-center order-md-2 order-4">
          <i class="text-muted fa fa-step-forward c-pointer"></i>
        </div>

        <div class="d-flex align-items-center order-md-3 order-5">
          <i
            class="text-muted fa fa-link-regular c-pointer"
            id="auto-scroll-btn"
            data-title="<%= _t("player.scroll") %>"
          ></i>
        </div>
      </div>

      <div class="col-9 d-flex align-items-center w-auto">
        <small class="text-primary timer mr-3 d-none">00:00</small>
        <div id="player-bar">
          <div class="progress bg-primary"></div>
        </div>
        <small class="text-primary total-time ml-2 d-none">00:00</small>
      </div>
    </div>
  </div>
</div>
