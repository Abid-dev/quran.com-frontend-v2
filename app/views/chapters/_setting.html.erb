<div class="right-sidebar px-4 py-4 border-left">
  <div class="d-flex justify-content-between align-items-center pb-2">
      <i class="fa fa-times-circle", class="c-pointer" data-target="sidebar.settingClose"></i>
      <h4 class="mb-0 ff-b">Setting</h4>
      <button class="btn btn-primary text-white">Reset to default</button>
  </div>

  <div class="d-md-none d-flex justify-content-between pb-3 pt-2 align-items-center border-top">
    <h6 class="mb-0 ff-b">Mode</h6>
    <label class="switch my-0">
      <input type="checkbox">
      <span class="slider round fa"></span>
    </label>
  </div>

  <div class="d-md-none d-block mt-3">
    <ul class="nav nav-pills mb-0 justify-content-between" id="pills-tab" role="tablist">
      <li class="nav-item">
        <a class="nav-link px-2 px-md-3 active" id="pill-translation-tab" data-toggle="pill" href="#pill-translation" role="tab" aria-controls="pill-translation" aria-selected="true">Translation</a>
      </li>
      <li class="nav-item">
        <a class="nav-link px-2 px-md-3" id="pill-reading-tab" data-toggle="pill" href="#pill-reading" role="tab" aria-controls="pill-reading" aria-selected="false">Reading</a>
      </li>
      <li class="nav-item">
        <a class="nav-link px-2 px-md-3" id="pill-surha-tab" data-toggle="pill" href="#pill-surha" role="tab" aria-controls="pill-surha" aria-selected="false">Surah Info</a>
      </li>
    </ul>
  </div>

  <div class="row bg-info p-3 border mt-5 rounded align-items-center c-pointer">
    <div class="col-11">
      <h6 class="mb-0 ff-b">Translation</h6>
      <small class="mb-0 text-muted">Sahih International</small>
    </div>
    <div class="col-1">
      <i class="fa fa-chevron-right" data-target="sidebar.settingClose"></i>
    </div>
  </div>

  <div class="row bg-info p-3 border mt-3 rounded align-items-center c-pointer">
    <div class="col-11">
      <h6 class="mb-0 ff-b">Reciters</h6>
      <small class="mb-0 text-muted">Mishari Rashid al-`Afasy</small>
    </div>
    <div class="col-1">
      <i class="fa fa-chevron-right" data-target="sidebar.settingClose"></i>
    </div>
  </div>

  <ul class="nav nav-pills my-5 justify-content-center" id="pills-tab" role="tablist">
    <li class="nav-item">
      <a class="nav-link active" id="Display-tab" data-toggle="pill" href="#Display" role="tab" aria-controls="Display" aria-selected="true">Display settings</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="Repeat-tab" data-toggle="pill" href="#Repeat" role="tab" aria-controls="Repeat" aria-selected="false">Repeat settings</a>
    </li>
  </ul>
  <div class="tab-content" id="pills-tabContent">
    <div class="tab-pane fade show active" id="Display" role="tabpanel" aria-labelledby="Display-tab">
      <h6  class="ff-b">Tooltip display</h6>
      <div class="row">
        <label class="custom-label col">
          <input type="radio" name="radio" checked/>
          <span class="border border-muted d-flex w-100 rounded">Translation</span>
        </label>
        <label class="custom-label col">
          <input type="radio" name="radio"/>
          <span class="border border-muted d-flex w-100 rounded">Transliteration</span>
        </label>
        <label>
      </div>

      <div class="row bg-info p-3 border mt-3 rounded align-items-center c-pointer">
        <div class="col-11">
          <h6 class="mb-0 ff-b">Fonts</h6>
          <small class="mb-0 text-muted">Mishari Rashid al-`Afasy</small>
        </div>
        <div class="col-1">
          <i class="fa fa-chevron-right" data-target="sidebar.settingClose"></i>
        </div>
      </div>

      <h6 class="ff-b mt-4">Font sizes</h6>
      <div class="row">
        <div class="col my-2">
          <div class="d-flex justify-content-between align-items-center">
            <div class="rounded-circle bg-info border d-flex justify-content-center align-items-center font-size-box">
              <i class="fa fa-plus-circle" data-target="sidebar.settingClose"></i>
            </div>
            <h6 class="mb-0 ff-b">Arabic</h6>
            <div class="rounded-circle bg-info border d-flex justify-content-center align-items-center font-size-box">
              <i class="fa fa-minus-circle" data-target="sidebar.settingClose"></i>
            </div>
          </div>
        </div>
         <div class="col my-2">
          <div class="d-flex justify-content-between align-items-center">
            <div class="rounded-circle bg-info border d-flex justify-content-center align-items-center font-size-box">
              <i class="fa fa-plus-circle" data-target="sidebar.settingClose"></i>
            </div>
            <h6 class="mb-0 ff-b">Translation</h6>
            <div class="rounded-circle bg-info border d-flex justify-content-center align-items-center font-size-box">
              <i class="fa fa-minus-circle" data-target="sidebar.settingClose"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="tab-pane fade" id="Repeat" role="tabpanel" aria-labelledby="Repeat-tab">
      <h6 class="ff-b mt-4">Play</h6>
      <div class="dropdown pb-4 border-bottom">
          <button class="btn btn-outline-info border text-muted dropdown-toggle" type="button" id="play-dropdown" data-toggle="dropdown" aria-expanded="false">
            Countinues
          </button>
          <ul class="dropdown-menu custom-shadow border-0 rounded" aria-labelledby="play-dropdown">
            <li><a class="dropdown-item" href="#">Countinues</a></li>
            <li><a class="dropdown-item" href="#">Chapter</a></li>
            <li><a class="dropdown-item" href="#">Page</a></li>
            <li><a class="dropdown-item" href="#">Juzz</a></li>
          </ul>
      </div>

      <div class="border-bottom py-4">
        <h6 class="ff-b">Play each verse</h6>
        <div class="row">
          <div class="col-md-6 d-flex align-items-center">
            <input type="text" class="form-control w-50" id="play-each-verse">
            <label for="play-each-verse" class="form-label mb-0 text-muted ml-2">times</label>
          </div>
        </div>
      </div>

      <div class="py-4">
        <h6 class="ff-b">Set how long to pause before playing next word</h6>
        <div class="form-check d-flex align-items-center text-muted">
          <input class="form-check-input" type="radio" name="flexRadioDefault" id="wordpause-specifc">
          <label class="form-check-label d-flex align-items-center" for="wordpause-specifc">
            <span class="mx-2">Wait</span>
            <input type="text" class="form-control w-25" id="play-each-verse">
            <span class="ml-2">seconds</span>
          </label>
        </div>
        <div class="form-check text-muted mt-2">
          <input class="form-check-input" type="radio" name="flexRadioDefault" id="wordpause-same" checked>
          <label class="form-check-label" for="wordpause-same">
            Wait same duration of the word
          </label>
        </div>
      </div>

       <div class="py-4">
        <h6 class="ff-b">Set how long to pause before playing next Tajweed ruling</h6>
        <div class="form-check d-flex align-items-center text-muted">
          <input class="form-check-input" type="radio" name="flexRadioDefault" id="Tajweed-specifc">
          <label class="form-check-label d-flex align-items-center" for="Tajweed-specifc">
            <span class="mx-2">Wait</span>
            <input type="text" class="form-control w-25" id="play-each-verse">
            <span class="ml-2">seconds</span>
          </label>
        </div>
        <div class="form-check text-muted mt-2">
          <input class="form-check-input" type="radio" name="flexRadioDefault" id="Tajweed-same" checked>
          <label class="form-check-label" for="Tajweed-same">
            Wait same duration of the Tajweed
          </label>
        </div>
      </div>

       <div class="py-4">
        <h6 class="ff-b">Set how long to pause before playing next verse</h6>
        <div class="form-check d-flex align-items-center text-muted">
          <input class="form-check-input" type="radio" name="flexRadioDefault" id="verse-specifc">
          <label class="form-check-label d-flex align-items-center" for="verse-specifc">
            <span class="mx-2">Wait</span>
            <input type="text" class="form-control w-25" id="play-each-verse">
            <span class="ml-2">seconds</span>
          </label>
        </div>
        <div class="form-check text-muted mt-2">
          <input class="form-check-input" type="radio" name="flexRadioDefault" id="verse-same" checked>
          <label class="form-check-label" for="verse-same">
            Wait same duration of the verse
          </label>
        </div>
      </div>

    </div>
  </div>
</div>

