<div class="translation__item verse"
  id="<%= verse.id %>"
     data-verse-number="<%= verse.verse_number %>"
     data-controller="verse"
     data-key="<%= verse.verse_key %>"
     data-text="<%= verse.text_uthmani %>">
  <div>
    <div class="translation__icons">
      <a class="translation__icon surah-ayah-link" href="/<%=verse.chapter_id%>/<%=verse.verse_number%><%=@presenter.params_for_verse_link%>"><span class="surah-ayah"><%=verse.verse_key%></span></a>
      <a class="translation__icon play"
         data-title="<%= t('action.play') %>"
          data-controller="track"
          data-name='ayah-action'
          data-category="play">
         <span class="icon-play1 icon"></span>
      </a>
      <div class="actions-menu">
        <a class="translation__icon open-actions" data-title="Actions"><span class="icon-menu"></span></a>
        <div class="actions-wrapper hidden" data-verse-id="<%=verse.verse_index%>">
          <div class="actions-items">
            <div class="actions-header">
              <p class="text text--darkgrey text--medium text--regular"><%=verse.chapter.name_simple%>: <%=verse.verse_number%></p>
              <span class="icon-x close-actions"></span>
            </div>
            <a class="translation__icon icon-duplicate"
              data-title="<%= t('action.copy.label') %>"
              data-done="<%= t('action.copy.done') %>"
              data-controller="track"
              data-name='ayah-action'
              data-category="copy"><%= _t('action.copy.label') %>
            </a>
            <a class="translation__icon icon-copy action-copy"
              data-title="Copy options"
              data-controller="ajax-modal"
              data-url="<%= copy_advanced_verse_path(verse.id, translation_ids: @presenter.valid_translations) %>"
              data-controller="track"
              data-type="copy"
              data-name='ayah-action'>Copy advanced
            </a>
            <a class="translation__icon icon-book-open"
              data-title="<%= t('action.tafsir.label', default: 'Tafsir') %>"
              data-controller="ajax-modal"
              data-url="<%= select_tafsirs_verse_path(verse.id) %>"
              data-controller="track"
              data-type="tafsir"
              data-name='ayah-action'
              data-category="tafsir-list"><%= t('action.tafsir.label', default: 'Tafsir') %>
            </a>
            <a class="translation__icon icon-share-2"
              data-title="<%= t('action.share', default: 'Share ayah') %>"
              data-controller="ajax-modal"
              data-url="<%= share_verse_path(verse.id) %>"
              data-controller="track"
              data-type="share"
              data-name='ayah-action'
              data-category="share-list"><%= t('action.share') %>
            </a>
            <a class="translation__icon icon-quran-reflect "
              data-title="<%= t('action.quran_reflect', default: 'Read Reflections for this ayah on QuranReflect') %>"
              href="http://quranreflect.com/<%= "#{verse.chapter_id}" %>/<%= "#{verse.verse_number}"%>?feed=true" target="_blank"
              data-controller="track"
              data-name='ayah-action'
              data-category="QuranReflect">QuranReflect
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="traslation__text">
    <div class="translation__arabic">
      <div class="arabic text-right <%= @presenter.font_method %>">
        <% if @presenter.render_verse_words? %>
          <%= render partial: 'chapters/word', collection: verse.words %>
        <% else %>
          <%= verse.send(@presenter.font_method).to_s.html_safe %>
        <% end %>
      </div>
    </div>
    <% if @presenter.render_translations? %>
      <%= render partial: 'translation', collection: verse.translations, as: :translation %>
    <% end %>
  </div>
</div>
<div class="horizontal-line"></div>