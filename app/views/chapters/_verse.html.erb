<div class="translation__item verse"
     id="<%= verse.verse_key %>"
     data-verse-number="<%= verse.verse_number %>"
     data-controller="verse"
     data-key="<%= verse.verse_key %>"
     data-text="<%= verse.text_uthmani %>">
  <div>
    <div class="translation__icons">
      <a class="translation__icon surah-ayah-link"
         href="/<%= verse.verse_key %><%= @presenter.params_for_verse_link %>"
         data-controller='track'
         data-name='ayah-key'
         data-value='<%= verse.verse_key %>'
         data-category='ayah-action'>
        <span class="surah-ayah"><%= verse.verse_key %></span>
      </a>

      <a class="translation__icon play"
         data-title="<%= t('action.play') %>"
         data-controller="track"
         data-name='ayah-action'
         data-value='<%= verse.verse_key %>'
         data-category="play">
        <span class="quran-icon icon-play1"></span>
      </a>

      <div class="actions-menu">
        <a class="translation__icon open-actions"
           data-title="Actions"
           data-controller="track"
           data-name='ayah-action'
           data-value='<%= verse.verse_key %>'
           data-category="actions">
          <span class="icon-menu"></span>
        </a>

        <div class="actions-wrapper hidden">
          <div class="actions-items">
            <div class="actions-header">
              <p class="text text--darkgrey text--medium text--regular">
                <%= verse.chapter.name_simple %> - <%= verse.verse_key %>
              </p>
              <span class="icon-x close-actions"></span>
            </div>

            <a class="translation__icon quick-copy"
               data-done="<%= t('action.copy.done') %>"
               data-title="<%= t('action.copy.label') %>"
               data-controller="track"
               data-name='ayah-action'
               data-category="copy">
              <i class="icon-duplicate"></i>
              <%= _t('action.copy.label') %>
            </a>

            <a class="translation__icon"
               data-controller="ajax-modal"
               data-url="/<%= verse.id %>/copy_options<%= @presenter.params_for_verse_link %>"
               data-controller="track"
               data-name='ayah-action'>
              <i class="icon-copy"></i>
              Copy advanced
            </a>

            <a class="translation__icon"
               data-controller="ajax-modal"
               data-url="<%= select_tafsirs_verse_path(verse.id) %>"
               data-controller="track"
               data-name='ayah-action'
               data-category="tafsir-list">
              <i class="icon-book-open"></i>
              <%= _t('action.tafsir.label', default: 'Tafsir') %>
            </a>

            <a class="translation__icon"
               data-controller="ajax-modal"
               data-url="<%= share_verse_path(verse.id) %>"
               data-controller="track"
               data-name='ayah-action'
               data-category="share-list">
              <i class="icon-share-2"></i>
              <%= _t('action.share', default: 'Share ayah') %>
            </a>

            <a class="translation__icon"
               href="http://quranreflect.com/<%= "#{verse.chapter_id}" %>/<%= "#{verse.verse_number}" %>?feed=true" target="_blank"
               data-controller="track"
               data-name='ayah-action'
               data-category="QuranReflect">
              <i class="icon-quran-reflect"></i>
              QuranReflect
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="traslation__text">
    <div class="translation__arabic">
      <div class="arabic text-right <%= @presenter.font_method %>">
        <% if @presenter.render_verse_words? %>
          <%= render partial: 'chapters/word', collection: verse.words %>
        <% else %>
          <%= verse.send(@presenter.font_method).to_s.html_safe %>
        <% end %>
      </div>
    </div>
    <% if @presenter.render_translations? %>
      <%= render partial: 'translation', collection: verse.translations, as: :translation %>
    <% end %>
  </div>
</div>
<div class="horizontal-line"></div>
