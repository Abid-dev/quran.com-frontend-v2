<div class="right-sidebar px-4 py-4 border-left" data-controller="settings">
  <div class="d-flex justify-content-between pb-3 pt-2 align-items-center">
    <h6 class="mb-0">
      <%= _t('settings.night_mode.label') %>
    </h6>

    <div class="col-2 justify-content-end" data-controller="theme">
          <span class="theme-switch mr-2" data-theme="light">
            <%= lazy_image_tag "icon/light.svg" %>
          </span>
    </div>
  </div>

  <div class="d-md-none d-block mt-3">
    <ul class="nav nav-pills mb-0 justify-content-between" id="pills-tab" role="tablist">
      <li class="nav-item">
        <a class="nav-link px-2 px-md-3 active" id="pill-translation-tab" data-toggle="pill" href="#pill-translation" role="tab" aria-controls="pill-translation" aria-selected="true">
          <%= _t('reader_mode.translation') %>
        </a>
      </li>

      <li class="nav-item">
        <a class="nav-link px-2 px-md-3" id="pill-reading-tab" data-toggle="pill" href="#pill-reading" role="tab" aria-controls="pill-reading" aria-selected="false">
          <%= _t('reader_mode.reading') %>
        </a>
      </li>

      <li class="nav-item">
        <a class="nav-link px-2 px-md-3" id="pill-surah-info-tab" data-toggle="pill" href="#pill-info" role="tab" aria-controls="pill-info" aria-selected="false">
          <%= _t('reader_mode.info') %>
        </a>
      </li>
    </ul>
  </div>

  <div class="row bg-info p-3 border mt-5 rounded align-items-center c-pointer" data-controller="sidebar" data-is-child=true data-target="#translations-sidebar" data-close=".close-translations-sidebar">
    <div class="col-11">
      <h6 class="mb-0 ff-b"><%= _t('settings.translations') %></h6>
      <small class="mb-0 text-muted">Sahih International</small>
    </div>

    <div class="col-1">
      <i class="fa fa-chevron-right"></i>
    </div>
  </div>

  <div class="row bg-info p-3 border mt-3 rounded align-items-center c-pointer" data-controller="sidebar" data-is-child=true data-target="#reciters-sidebar" data-close=".close-reciters-sidebar">
    <div class="col-11">
      <h6 class="mb-0 ff-b"><%= _t('settings.reciters') %></h6>
      <small class="mb-0 text-muted">Mishari Rashid al-`Afasy</small>
    </div>

    <div class="col-1">
      <i class="fa fa-chevron-right"></i>
    </div>
  </div>

  <ul class="nav nav-pills my-5 justify-content-center" id="pills-tab" role="tablist">
    <li class="nav-item">
      <a class="nav-link active" id="display-tab" data-toggle="pill" href="#display" role="tab" aria-controls="Display" aria-selected="true">
        <%= _t('settings.display') %>
      </a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="Repeat-tab" data-toggle="pill" href="#Repeat" role="tab" aria-controls="Repeat" aria-selected="false">
        <%= _t('settings.audio') %>
      </a>
    </li>
  </ul>

  <div class="tab-content" id="display-tabs">
    <div class="tab-pane fade show active" id="display" role="tabpanel" aria-labelledby="display-tab">
      <h6 class="ff-b">
        <%= _t('settings.tooltip.label') %>
      </h6>
      <div class="row">
        <label class="custom-label col">
          <input type="radio" name="radio" checked/>
          <p class="border border-muted d-flex w-100 rounded">
            <%= _t('settings.tooltip.translation') %>
          </p>
        </label>
        <label class="custom-label col">
          <input type="radio" name="radio"/>
          <p class="border border-muted d-flex w-100 rounded">
            <%= _t('settings.tooltip.transliteration') %>
          </p>
        </label>
      </div>

      <div class="row bg-info p-3 border mt-3 rounded align-items-center c-pointer" data-controller="sidebar" data-is-child=true data-target="#fonts-sidebar" data-close=".close-fonts-sidebar">
        <div class="col-11">
          <h6 class="mb-0 ff-b">
            <%= _t('settings.font_type') %>
          </h6>
          <small class="mb-0 text-muted">Mishari Rashid al-`Afasy</small>
        </div>

        <div class="col-1">
          <i class="fa fa-chevron-right"></i>
        </div>
      </div>

      <h6 class="ff-b mt-4">
        <%= _t('settings.font_size.label') %>
      </h6>

      <div class="row">
        <div class="col my-2">
          <div class="d-flex justify-content-between align-items-center">
           <i class="fa fa-plus-circle c-pointer"></i>
            <h6 class="mb-0 ff-b"><%= _t('settings.font_size.arabic') %></h6>
           <i class="fa fa-minus-circle c-pointer"></i>
          </div>
        </div>

        <div class="col my-2">
          <div class="d-flex justify-content-between align-items-center">
            <i class="fa fa-plus-circle c-pointer"></i>
            <h6 class="mb-0 ff-b"><%= _t('settings.font_size.translation') %></h6>
            <i class="fa fa-minus-circle c-pointer"></i>
          </div>
        </div>
      </div>
    </div>

    <div class="tab-pane fade" id="Repeat" role="tabpanel" aria-labelledby="Repeat-tab">
      <h6 class="ff-b mt-4">Play</h6>
      <div class="dropdown pb-4 border-bottom">
        <button class="btn btn-outline-info border text-muted dropdown-toggle" type="button" id="play-dropdown" data-toggle="dropdown" aria-expanded="false">
          Countinues
        </button>
        <ul class="dropdown-menu custom-shadow border-0 rounded" aria-labelledby="play-dropdown">
          <li><a class="dropdown-item" href="#">Countinues</a></li>
          <li><a class="dropdown-item" href="#">Chapter</a></li>
          <li><a class="dropdown-item" href="#">Page</a></li>
          <li><a class="dropdown-item" href="#">Juzz</a></li>
        </ul>
      </div>

      <div class="border-bottom py-4">
        <h6 class="ff-b">Play each verse</h6>
        <div class="row">
          <div class="col-md-6 d-flex align-items-center">
            <input type="text" class="form-control w-50" id="play-each-verse">
            <label for="play-each-verse" class="form-label mb-0 text-muted ml-2">times</label>
          </div>
        </div>
      </div>

      <div class="py-4">
        <h6 class="ff-b">Set how long to pause before playing next word</h6>
        <div class="form-check d-flex align-items-center text-muted">
          <input class="form-check-input" type="radio" name="flexRadioDefault" id="wordpause-specifc">
          <label class="form-check-label d-flex align-items-center" for="wordpause-specifc">
            <span class="mx-2">Wait</span>
            <input type="text" class="form-control w-25" id="play-each-verse">
            <span class="ml-2">seconds</span>
          </label>
        </div>
        <div class="form-check text-muted mt-2">
          <input class="form-check-input" type="radio" name="flexRadioDefault" id="wordpause-same" checked>
          <label class="form-check-label" for="wordpause-same">
            Wait same duration of the word
          </label>
        </div>
      </div>

      <div class="py-4">
        <h6 class="ff-b">Set how long to pause before playing next Tajweed ruling</h6>
        <div class="form-check d-flex align-items-center text-muted">
          <input class="form-check-input" type="radio" name="flexRadioDefault" id="Tajweed-specifc">
          <label class="form-check-label d-flex align-items-center" for="Tajweed-specifc">
            <span class="mx-2">Wait</span>
            <input type="text" class="form-control w-25" id="play-each-verse">
            <span class="ml-2">seconds</span>
          </label>
        </div>
        <div class="form-check text-muted mt-2">
          <input class="form-check-input" type="radio" name="flexRadioDefault" id="Tajweed-same" checked>
          <label class="form-check-label" for="Tajweed-same">
            Wait same duration of the Tajweed
          </label>
        </div>
      </div>

      <div class="py-4">
        <h6 class="ff-b">Set how long to pause before playing next verse</h6>
        <div class="form-check d-flex align-items-center text-muted">
          <input class="form-check-input" type="radio" name="flexRadioDefault" id="verse-specifc">
          <label class="form-check-label d-flex align-items-center" for="verse-specifc">
            <span class="mx-2">Wait</span>
            <input type="text" class="form-control w-25" id="play-each-verse">
            <span class="ml-2">seconds</span>
          </label>
        </div>
        <div class="form-check text-muted mt-2">
          <input class="form-check-input" type="radio" name="flexRadioDefault" id="verse-same" checked>
          <label class="form-check-label" for="verse-same">
            Wait same duration of the verse
          </label>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="sidebar slide-right px-4 py-4 border-left d-none" id="translations-sidebar">
  <div class="sidebar-head d-flex align-items-center justify-content-between">
    <i class="fa fa-long-arrow-left close-sidebar close-translations-sidebar"></i>
    <h4 class="mb-0"><%= _t('settings.translations') %></h4>

    <% if false %>
    <button class="btn btn-primary text-white">
      <%= _t('settings.remove_all') %>
    </button>
    <% end %>
  </div>

  <%= render_async '/settings/translations', lazy_load: true, lazy_load: {root: '#translations-sidebar'} do %>
    <p class="text-center p-3">
      <%= loading_spinner %>
    </p>
  <% end.html_safe %>
</div>

<div class="sidebar slide-right px-4 py-4 border-left d-none" id="reciters-sidebar">
  <div class="sidebar-head d-flex align-items-center justify-content-between">
    <i class="fa fa-long-arrow-left close-sidebar close-reciters-sidebar"></i>
    <h4 class="mb-0"><%= _t('settings.reciters') %></h4>
  </div>

  <%= render_async '/settings/recitations', lazy_load: true, lazy_load: {root: '#reciters-sidebar'} do %>
    <p class="text-center p-3">
      <%= loading_spinner %>
    </p>
  <% end.html_safe %>
</div>

<div class="sidebar slide-right px-4 py-4 border-left d-none" id="fonts-sidebar">
  <div class="sidebar-head d-flex align-items-center justify-content-between">
    <i class="fa fa-long-arrow-left close-sidebar close-fonts-sidebar"></i>
    <h4 class="mb-0"><%= _t('settings.font_type') %></h4>
  </div>

  <%= render_async '/settings/fonts', lazy_load: true, lazy_load: {root: '#fonts-sidebar'} do %>
    <p class="text-center p-3">
      <%= loading_spinner %>
    </p>
  <% end.html_safe %>
</div>
