<% verse = Verse.find_by_verse_key('1:1') %>
<div>
  <div class="row">
    <div class="my-4 col-12">
      <input class="form-check-input" type="radio" name="font" value="indopak" id=indopak>
      <label class="form-check-label text-muted ff-m" for="indopak">
        <%= _t('settings.fonts.qcf_v1') %>
      </label>

      <h1 class="arabic p1-v1" style="font-size: 30px">
        <% verse.words.each do |word| %>
        <span class="<%= word.char_type_name %>" id="w-<%= word.id %>">
  <span class="p1-v1">
    <%= word.code.html_safe %>
  </span>
</span>
        <% end %>
      </h1>
    </div>

    <div class="my-4 col-12">
      <input class="form-check-input" type="radio" name="font" value="indopak" id=indopak>
      <label class="form-check-label text-muted ff-m" for="indopak">
        <%= _t('settings.fonts.qcf_v2') %>
      </label>

      <h1 class="arabic p1-v1" style="font-size: 30px">
        <% verse.words.each do |word| %>
        <span class="<%= word.char_type_name %>" id="w-<%= word.id %>">
  <span class="p1-v2">
    <%= word.code_v2.html_safe %>
  </span>
</span>
        <% end %>
      </h1>
    </div>

    <div class="my-4 col-12">
      <input class="form-check-input" type="radio"  checked=checked name="font" value="tajweed" id=uthmani>
      <label class="form-check-label text-muted ff-m" for="uthmani">
        <%= _t('settings.fonts.uthmani') %>
      </label>

      <h1 class="arabic madani" style="font-size: 30px">
        <%= raw verse.text_madani %>
      </h1>
    </div>

    <div class="my-4 col-12">
      <input class="form-check-input" type="radio" name="font" value="indopak" id=indopak>
      <label class="form-check-label text-muted ff-m" for="indopak">
        <%= _t('settings.fonts.indopak') %>
      </label>

      <h1 class="arabic indopak" style="font-size: 30px">
        <%= raw verse.text_indopak %>
      </h1>
    </div>

    <div class="my-4 col-12">
      <input class="form-check-input" type="radio" name="font" value="tajweed" id=tajweed>
      <label class="form-check-label text-muted ff-m" for="tajweed">
        <%= _t('settings.fonts.tajweed') %>
      </label>

      <h1 class="arabic text_uthmani_tajweed" style="font-size: 30px">
        <%= raw verse.text_uthmani_tajweed %>
      </h1>
    </div>
  </div>
</div>
