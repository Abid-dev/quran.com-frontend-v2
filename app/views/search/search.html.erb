<% content_for :header do %>
  <div class="col-2 col-md-8 align-items-center chapter-header">
    <div class="rounded-search col-md-6">
      <%= render 'shared/search_form' %>
    </div>
  </div>
<% end %>

<%= render 'pagination' %>

<div class="container">
  <div id="verses" data-controller="infinite-page" style="margin-top: 50px">
    <% if @presenter.no_results? %>
      <div class="row">
        <div class="col-12 text-center" style="margin-top: 20px">
          <h3><%= _t("search.no_result") %></h3>
        </div>
      </div>
    <% end %>

    <%= render 'results' %>
  </div>
</div>
