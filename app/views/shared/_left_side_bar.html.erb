<div class="left-sidebar">
  <div class="sidebar-head d-flex align-items-center">
    <h4 class="ff-b mb-0">Menu</h4>
    <i class="fa fa-times-circle close-menu" data-target="sidebar.close"></i>
  </div>
  <div class="d-md-none d-flex justify-content-between px-3 py-3 align-items-center">
      <p class="ff-m mb-0 text-center">Mode</p>
      <%= lazy_image_tag 'media/images/icons/day.svg', width: "20px", class: "mr-2", alt: 'Quran.com mobile apps' %>
      <%= lazy_image_tag 'media/images/icons/night.svg', width: "20px", alt: 'Quran.com mobile apps' %>
  </div>
  <ul class="main-menu p-0">
    <li class="d-block">
      <%= link_to root_path do %>
        <%= lazy_image_tag 'media/images/icons/home.svg', class: "pr-2" %>
        <%= _t('home') %>
      <% end %>
    </li>
    <li class="d-block">
      <%= link_to pages_apps_path do %>
        <%= lazy_image_tag 'media/images/icons/phone.svg', class: "pr-2" %>
        <%= _t('nav.mobile_apps') %>
      <% end %>
    </li>
    <li class="d-block">
      <%= link_to pages_about_us_path do %>
        <%= lazy_image_tag 'media/images/icons/information.svg', class: "pr-2" %>
         <%= _t('nav.about_us') %>
      <% end %>
    </li>
    <li class="d-block">
      <%= link_to pages_donations_path do %>
        <%= lazy_image_tag 'media/images/icons/donation.svg', class: "pr-2" %>
        <%= _t('nav.contribute') %>
      <% end %>
    </li>
    <li class="d-block">
      <%= link_to pages_help_and_feedback_path do %>
        <%= lazy_image_tag 'media/images/icons/help.svg', class: "pr-2" %>
        <%= _t('nav.help') %>
      <% end %>
    </li>
    <li class="d-block">
      <%= link_to pages_developers_path do %>
        <%= lazy_image_tag 'media/images/icons/developer.svg', class: "pr-2" %>
        <%= _t('nav.developers') %>
      <% end %>
    </li>
  </ul>

  <div class="more-links">
    <h4 class="ff-b"><%= _t('related_sites.label') %></h4>
    <ul class="p-0">
      <li class="d-block">
        <a href="https://quranicaudio.com/" target="_blank" rel="noopener noreferrer">Quraninaudio.com</a>
      </li>
      <li class="d-block">
        <a href="https://sunnah.com/" target="_blank" rel="noopener noreferrer">Salah.com</a>
      </li>
      <li class="d-block">
        <a href="https://legacy.quran.com/" target="_blank" rel="noopener noreferrer"> Legacy Quran.com</a>
      </li>
      <li class="d-block">
        <a href="https://corpus.quran.com/wordbyword.jsp" target="_blank" rel="noopener noreferrer">Corpus.Quran.com</a>
      </li>
    </ul>
  </div>
</div>
