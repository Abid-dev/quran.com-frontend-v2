<%= render 'shared/left_side_bar' %>

<div class="sticky-top">

  <nav class="navbar navbar-light bg-white custom-shadow">
    <div class="container">
      <div class="row">
        <div class="col-5 d-flex align-items-center">
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="sidebar.trigger" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <%= link_to root_path, class: 'h2 ff-b mb-0 ml-3' do %>
            Quran<span class="ff-m h4 ml-0">.com</span>
          <% end %>
          <div id="local-switcher" class="d-none d-md-block">
            <div class="dropdown">
              <a class="nav-link dropdown-toggle pb-0" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <%= _t('local_native_name') %> <i class="fa fa-fadown-open"></i>
              </a>

              <ul class="dropdown-menu">
                <% available_locales.each do |locale, name| %>
                  <li role="presentation">
                    <%= link_to url_for(locale: locale), role: "menuitem", class: "dropdown-item #{'active' if I18n.locale.to_s == locale }" do %>
                      <span class="<%= locale %>"><%= name %></span>
                    <% end %>
                  </li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
         <%= yield :header %>
        <div class="col-7 d-flex align-items-center justify-content-end download-btn">
          <div class="navbar-expand-lg d-none d-md-block">
            <ul class="navbar-nav">
              <li class="nav-item">
                  <%= link_to _t('download'), pages_apps_path, class: 'btn btn-primary text-white' %>
              </li>
            </ul>
          </div>
        </div>
        </div>
    </div>
  </nav>
</div>
