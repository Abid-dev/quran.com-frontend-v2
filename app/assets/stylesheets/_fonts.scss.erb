$font-regular: "SFProText-Regular";
$font-bold: "SFProText-Bold";
$font-medium: "SFProText-Medium";

@font-face {
  font-family: $font-regular;
  src: local("SFProText Regular"), local("SFProText-Regular"),
  local("SF Pro Text Regular"), url("<%= asset_url 'SFProText-Regular.woff2' %>"),
  url("<%= asset_url 'SFProText-Regular.eot?#iefix' %>") format("embedded-opentype"),
  url("<%= asset_url 'SFProText-Regular.woff' %>") format("woff"),
  url("<%= asset_url 'SFProText-Regular.ttf' %>") format("truetype");
  font-weight: normal;
  font-style: normal;
  font-display: swap;
}

@font-face {
  font-family: $font-medium;
  src: local("SFProText Medium"),
  local("SFProText-Medium"),
